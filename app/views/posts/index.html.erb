<p style="color: green"><%= notice %></p>

<h1>Posts</h1>
<table class="table">
<thead>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Date</th>
    <th colspan="3"></th>
  </tr>

  </thead>
  <tbody id="posts">
    <% @posts.each do |post| %>
      <tr> 
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.created_at.strftime("%B %d, %Y") %></td>
        <td><%= link_to 'Show', post, class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_post_path(post), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New post", new_post_path, class:'btn btn-primary' %>
